@model Saptra.Web.Data.mPlanSemanal

<div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@ViewBag.Titulo</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "PlanSemanal", FormMethod.Post, new { id = "NuevoPlanForm", name = "NuevoPlanForm", @class = "form-horizontal", onsubmit = "return false" }))
            {
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-4">Periodo</div>
                        <div class="col-sm-8">
                            <select class="form-control" id="selPeriodo"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-4">Descripción</div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.DescripcionPlaneacion, new { @class = "form-control", maxlength = 100, required = "required" })
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(model => model.UsuarioCreacionId)
                @Html.HiddenFor(model => model.PeriodoId)
            }
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Global.btnCancel</button>
            <button type="button" class="btn btn-primary btn-GuardaNuevo">@Resources.Global.btnSave</button>
        </div>
    </div><!-- /.modal-content -->
</div>
