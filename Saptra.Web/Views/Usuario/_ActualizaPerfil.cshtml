@model Saptra.Web.Data.mUsuarios

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@Resources.Usuarios.titleUpdate</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"> </div>
            @using (Html.BeginForm("Actualiza", "Usuario", FormMethod.Post, new { id = "ActualizaPerfilUsuarioForm", name = "ActualizaPerfilUsuarioForm", @class = "form-horizontal", onsubmit = "return false" }))
            {
                <div class="form-group">
                    <div class="col-sm-12" align="center">
                        <img src=@Model.ImagenUsuario alt="Ingresa una foto" class="img-responsive img-circle" style="width:120px; height:120px;" id="imgUplMenu">
                        <div class="input-group col-sm-3">
                            <span class="input-group-btn">
                                <span class="btn btn-primary btn-file">
                                    Imagen&hellip; <input type="file" id="imgUsuMenu" name="imgUsuMenu">
                                </span>
                            </span>
                            <input type="text" class="form-control" readonly>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"><label class="control-label">@Resources.Usuarios.lblNameUser</label></div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.NombresUsuario, new { @class = "form-control", maxlength = 100, required = "required", @readonly = "readonly" })
                        @Html.TextBoxFor(model => model.ImagenUsuario, new { @class = "form-control", maxlength = 100, required = "required", style = "display: none;" })
                    </div>
                    <div class="col-sm-2"><label class="control-label">@Resources.Usuarios.lblApellido</label></div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.ApellidosUsuario, new { @class = "form-control", maxlength = 100, required = "required", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"><label class="control-label">@Resources.Usuarios.lblLogin</label></div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.LoginUsuario, new { @class = "form-control", maxlength = 100, required = "required", @readonly = "readonly" })
                    </div>

                    <div class="col-sm-2"><label class="control-label">@Resources.Usuarios.lblPassword</label></div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.PasswordUsuario, new { @class = "form-control", maxlength = 100, required = "required", type = "password", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"><label class="control-label">@Resources.Usuarios.lblEmail</label></div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.EmailUsuario, new { @class = "form-control", maxlength = 100, required = "required" })
                    </div>
                </div>      
                  @Html.HiddenFor(model => model.UsuarioId)
                <input type="hidden" id="Rol" value="@Model.RolId" />
                @*<input type="hidden" id="JefeUsuario" value="@Model.idJefeUsuario" />*@

            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">@Resources.Global.btnCancel</button>
            <button type="button" class="btn btn-primary" id="btn-ActualizarPerfilUsuario">@Resources.Global.btnSave</button>
        </div>
    </div>
</div>
