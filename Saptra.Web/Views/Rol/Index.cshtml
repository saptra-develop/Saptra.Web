@{
    ViewBag.Title = "Roles";
}

<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">
            Roles
            <button class="btn btn-outline btn-primary pull-right btnNuevo btn-xs" style="display: none;"><i class="fa fa-file-o"></i> Nuevo</button>
        </h4>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div id="bbGrid-clear" class="col-lg-12">
            <div id="cargandoInfo">@Resources.Global.menuLoading</div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" id="nuevoRol"
     tabindex="-1" role="dialog"
     aria-labelledby="nuevoRolLabel">
</div>

<div class="modal fade bs-example-modal-lg" id="actualizaRol"
     tabindex="-1" role="dialog"
     aria-labelledby="actualizaRolLabel">
</div>

<div class="modal fade bs-example-modal-lg" id="permisos"
     tabindex="-1" role="dialog"
     aria-labelledby="permisosLabel">
</div>


@section Scripts {
    @Html.IncludeVersionedJs(Url.Content("~/Scripts/Seguridad.js"))
}
