@model Saptra.Web.Data.cPeriodos

<div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@ViewBag.Titulo</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "Periodo", FormMethod.Post, new { id = "NuevoPeriodoForm", name = "NuevoPeriodoForm", @class = "form-horizontal", onsubmit = "return false" }))
            {
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-5">Fecha Inicio</div>
                        <div class="col-sm-7">
                            <div class='input-group date' id='dtpfechaInicio'>
                                <input type="text" id="fechaIni" class="form-control" required />
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-5">Fecha Fin</div>
                        <div class="col-sm-7">
                            <div class='input-group date' id='dtpfechaFin'>
                                <input type="text" id="fechaF" class="form-control" required />
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-5">Estatus</div>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(model => model.EstatusId,
                                                                                       new SelectList(new[]{
                                                                                                       new SelectListItem{ Text="Activo", Value="5"},
                                                                                                       new SelectListItem{ Text="Inactivo", Value="6"}},
                                                                               "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>*@
                @Html.HiddenFor(model => model.UsuarioCreacionId)

            }
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Global.btnCancel</button>
            <button type="button" class="btn btn-primary btn-GuardaNuevo">@Resources.Global.btnSave</button>
        </div>
    </div><!-- /.modal-content -->
</div>
